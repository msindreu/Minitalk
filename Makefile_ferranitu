SERVER				=	server
CLIENT				=	client

CLIENT_BONUS		=	client_bonus
SERVER_BONUS		=	server_bonus

MyLib_DIR			=	lib/Libft
MyLib				=	$(MyLib_DIR)/libft.a
MyPrintf_DIR		=	lib/ft_printf
MyPrintf			=	$(MyPrintf_DIR)/libftprintf.a
SRC				=	src/

SERVER_SRCS			=	$(SRC)server.c
SERVER_OBJS			=	$(SRC)server.o

CLIENT_SRCS			=	$(SRC)client.c
CLIENT_OBJS			=	$(SRC)client.o

CLIENT_BONUS_SRCS	=	$(SRC)client_bonus.c
CLIENT_BONUS_OBJS	=	$(SRC)client_bonus.o

SERVER_BONUS_SRCS	=	$(SRC)server_bonus.c
SERVER_BONUS_OBJS	=	$(SRC)server_bonus.o

CC				=	gcc
FLAGS			=	-g -Wall -Wextra -Werror
RM 				=	rm -rf

# Colors
NOCOLOR		=	\033[0m
BOLD_PURPLE	=	\033[1;35m
BOLD_CYAN	=	\033[1;36m
RED 		=	\033[0;91m
YELLOW 		=	\033[5;93m
BLUE 		=	\033[0;94m
GREEN		=	\033[5;32m

$(SRC)%.o: $(SRC)%.c Makefile
	@$(CC) $(FLAGS) -c $< -o $@

all:
	@$(MAKE) -sC $(MyLib_DIR)
	@$(MAKE) -sC $(MyPrintf_DIR)
	@$(MAKE) $(SERVER)
	@$(MAKE) $(CLIENT)

bonus:
	@$(MAKE) -sC $(MyLib_DIR)
	@$(MAKE) -sC $(MyPrintf_DIR)
	@$(MAKE) $(SERVER_BONUS)
	@$(MAKE) $(CLIENT_BONUS)

$(SERVER):: $(SERVER_OBJS)
	@$(CC) $(FLAGS) $(SERVER_OBJS) $(MyLib) $(MyPrintf) -o $(SERVER)
	@echo "\n:inbox_tray: $(BOLD_CYAN)Server ready!$(NOCOLOR)"

$(SERVER)::
	@echo "\n$(GREEN).........$@ is up to date........:+1:$(NOCOLOR)"

$(CLIENT):: $(CLIENT_OBJS)
	@$(CC) $(FLAGS) $(CLIENT_OBJS) $(MyLib) $(MyPrintf) -o $(CLIENT)
	@echo "\n:pager: $(BOLD_PURPLE)Client ready!$(NOCOLOR)"

$(CLIENT)::
	@echo "\n$(GREEN)........$@ is up to date.......:+1:$(NOCOLOR)"

$(SERVER_BONUS):: $(SERVER_BONUS_OBJS)
	@$(CC) $(FLAGS) $(SERVER_BONUS_OBJS) $(MyLib) $(MyPrintf) -o $(SERVER_BONUS)
	@echo "\n:inbox_tray: $(BOLD_CYAN)Server_Bonus ready!$(NOCOLOR)"

$(CLIENT_BONUS):: $(CLIENT_BONUS_OBJS)
	@$(CC) $(FLAGS) $(CLIENT_BONUS_OBJS) $(MyLib) $(MyPrintf) -o $(CLIENT_BONUS)
	@echo "\n:inbox_tray: $(BOLD_CYAN)Client_Bonus ready!$(NOCOLOR)"

$(SERVER_BONUS)::
	@echo "\n$(YELLOW)........$@ is up to date........:+1:$(NOCOLOR)"

$(CLIENT_BONUS)::
	@echo "\n$(YELLOW)........$@ is up to date........:+1:$(NOCOLOR)"

clean:
	@${RM} $(SERVER_OBJS) $(CLIENT_OBJS) $(CLIENT_BONUS_OBJS) $(SERVER_BONUS_OBJS)
	@make clean -sC $(MyLib_DIR)
	@make clean -sC $(MyPrintf_DIR)
	@echo "\n:droplet: $(YELLOW)Clean: $(RED)Removed all the \".o\" files \n$(NOCOLOR)"

fclean: clean
	@$(RM) $(SERVER) $(CLIENT) $(SERVER_BONUS) $(CLIENT_BONUS)
	@make fclean -sC $(MyLib_DIR)
	@make fclean -sC $(MyPrintf_DIR)
	@echo "\n:soap: $(YELLOW)Fclean: $(BLUE)Removed the executables \n$(NOCOLOR)"

re:	fclean all

.PHONY: all clean fclean re bonus
